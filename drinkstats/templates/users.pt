<script type="text/javascript">
	var view = "icon";

  	// Store the user's view preference in localStorage
  	function toggleViewPreference() {
        if (view == "list"){
            view = "icon"
        }
        else{
            view = "list"
        }
        localStorage.setItem("view", view)
  		loadView();
  	}

  	function loadView() {
  		// If the user wants list view, give them lists!
  		if (view == "list") {
  			//$(".list").addClass("no-bullet").removeClass("small-block-grid-4");
  			$(".list").each(function(){
  				var oldClass = ($(this).hasClass("small-block-grid-4")) ? "small-block-grid-4" : "small-block-grid-5";
  				$(this).attr("data-oldclass", oldClass).removeClass(oldClass).addClass("no-bullet");
  			});
  			$(".list > li > a").removeClass("icon-box");
  			$(".icon").filter(function() { 
				return !$(this).parent().parent().hasClass("popular");
			}).attr("style", "display:none");
  		}
  		// If the user wants icons, or hasn't picked a default, give them icons!
  		else {
  			//$(".list").removeClass("no-bullet").addClass("small-block-grid-4");
  			$(".list").each(function(){
  				var oldClass = $(this).attr("data-oldclass");
  				$(this).addClass(oldClass).removeClass("no-bullet").attr("data-oldclass", "");
  			});
  			$(".list > li > a").addClass("icon-box");
  			$(".icon").filter(function() { 
				return !$(this).parent().parent().hasClass("popular");
			}).attr("style", "");
  		}
  	}

  	// Document ready event listener
  	document.addEventListener("DOMContentLoaded", function() {
  		// Load the user's view preference
  		view = (typeof(Storage) !== "undefined") ? localStorage.getItem("view") : "icon";
  		if (view == "list") loadView();
  	}, false);
</script>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
